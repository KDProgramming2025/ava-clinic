server {
    listen 80;
    listen [::]:80;
    server_name _;

    # Serve built frontend
    root /var/www/ava-beauty/build;
    index index.html;

    # Proxy API to Node backend
    location /api/ {
        proxy_pass http://127.0.0.1:4000/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_buffering off;
        client_max_body_size 20m;
    }

    # Serve uploaded media directly if desired (optional)
    # location /uploads/ {
    #     alias /var/www/ava-beauty/uploads/;
    #     autoindex off;
    #     access_log off;
    #     add_header Cache-Control "public, max-age=604800" always;
    # }

    # Long cache for assets
    location /assets/ {
        try_files $uri =404;
        access_log off;
        add_header Cache-Control "public, max-age=31536000, immutable" always;
    }

    # SPA fallback for all other routes
    location / {
        try_files $uri /index.html;
    }

    # Compression
    gzip on;
    gzip_types text/plain text/css application/javascript application/json image/svg+xml application/xml+rss;
    gzip_min_length 1024;
    gzip_static on;

    # Security headers
    add_header X-Content-Type-Options nosniff;
    add_header X-Frame-Options SAMEORIGIN;
    add_header Referrer-Policy no-referrer-when-downgrade;
}
